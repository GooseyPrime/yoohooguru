{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",

  "rewrites": [
    {
      "source": "/api/backend/:path*",
      "destination": "https://api.yoohoo.guru/api/:path*"
    }
  ],

  "headers": [
    {
      "source": "/:path*",
      "headers": [
        {
          "key": "X-Middleware-Invoke",
          "value": "1"
        }
      ]
    }
  ]
}
