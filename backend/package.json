{
  "name": "yoohooguru-backend",
  "version": "1.0.0",
  "description": "Backend API for yoohoo.guru skill-sharing platform",
  "main": "src/index.js",
  "scripts": {
    "predev": "npm run ensure-frontend-built",
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "build": "echo 'Build completed'",
    "ensure-frontend-built": "cd ../frontend && (test -d dist || npm run build:fast)",
    "pretest": "node ../scripts/generate-cors-origins.js",
    "test": "firebase emulators:exec --project=yoohoo-dev-testing --only firestore,auth 'npm run jest'",
    "jest": "NODE_ENV=test jest --forceExit --runInBand --detectOpenHandles --verbose",
    "jest-test": "NODE_ENV=test ./node_modules/.bin/jest --forceExit --runInBand --detectOpenHandles --verbose",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "deploy": "railway up"
  },
  "dependencies": {
    "axios": "^1.12.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "escape-html": "^1.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.7.0",
    "firestore-store": "^2.0.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lusca": "^1.7.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "stripe": "^18.5.0",
    "uuid": "^8.3.2",
    "winston": "^3.18.2"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.0",
    "chalk": "^5.6.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "firebase-tools": "^13.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.1",
    "jest-environment-node": "^30.1.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "skill-sharing",
    "api",
    "express",
    "firebase",
    "stripe"
  ],
  "author": "GooseyPrime",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "testTimeout": 45000,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "verbose": true
  }
}
